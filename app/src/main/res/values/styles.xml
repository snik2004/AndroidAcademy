<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="textViewStoryLine">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/story_line_and_rating_tv</item>
        <item name="alpha">0.75</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_4</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="rating">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/story_line_and_rating_tv</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="rating.ratingCardList">
        <item name="alpha">0.9</item>

    </style>

    <style name="movieListHeader">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/color_text_film_name</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_4</item>

    </style>


    <style name="textViewStyleNameFilm">
        <item name="android:textSize">@dimen/text_size_40</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/color_text_film_name</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_0</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="texViewCast">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_multiplier</item>


    </style>

    <style name="textViewBtnBack">
        <item name="android:textColor">@color/color_text_film_name</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_2</item>
        <item name="alpha">0.5</item>


    </style>


    <style name="textViewActorName">
        <item name="android:textColor">@color/color_tv_actor_name</item>
    </style>

    <style name="textViewCountReviews">
        <item name="android:textColor">@color/color_tv_rewiews</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_4</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="textViewCountReviews.cardMovie">
        <item name="android:textColor">@color/color_tv_rewiews</item>
        <item name="android:textSize">@dimen/text_size_8</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_4</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="tvStoryLine">
        <item name="android:textColor">@color/color_tv_story_line</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_4</item>
    </style>


    <style name="textViewGenre">
        <item name="android:textColor">@color/color_tv_genre</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_4</item>

    </style>


    <style name="tag">

        <item name="android:textSize">@dimen/text_size_8</item>

        <item name="android:textColor">@color/color_tv_genre</item>

    </style>
    <style name="Base.Widget.AppCompat.RatingBar.Small" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="android:indeterminateDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:thumb">@null</item>
    </style>

</resources>