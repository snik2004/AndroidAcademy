<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_normal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_normal" />



    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_background" />

    <TextView
        android:id="@+id/movie_list_header"
        android:layout_width="@dimen/margin_none"
        android:layout_height="20dp"
        android:layout_marginTop="55dp"
        android:text="Movie list"
        app:drawableStartCompat="@drawable/ic_target"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/card_movie"
        android:layout_width="170dp"
        android:layout_height="296dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/ic_bg_block"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/movie_list_header" />
    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="166dp"
        android:layout_height="248dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/poster"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/movie_list_header" />


    <ImageView
        android:id="@+id/mask_poster"
        android:layout_marginTop="18dp"
        android:layout_width="166dp"
        android:layout_height="248dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mask_poster"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/movie_list_header" />

    <TextView
        android:layout_width="@dimen/line_height_24"
        android:layout_height="@dimen/line_height_24"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@id/movie_poster"
        app:layout_constraintStart_toStartOf="@id/movie_poster"
        android:text="@string/rating"
        android:backgroundTint="#191926"
        android:fontFamily="sans-serif-black"
        android:background="@drawable/round_corners"

/>

    <TextView
        android:id="@+id/genre"
        android:layout_width="146dp"
        style="@style/tag"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="214dp"
        android:text="@string/genre"
        app:layout_constraintStart_toStartOf="@+id/movie_poster"
        app:layout_constraintTop_toTopOf="@+id/movie_poster" />

    <RatingBar
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:transformPivotX="0dp"
        android:id="@+id/rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:numStars="5"
        android:progressTint="#FF3365"
        android:rating="4"
        android:stepSize="1"
        app:layout_constraintStart_toStartOf="@+id/genre"
        app:layout_constraintTop_toBottomOf="@+id/genre" />

    <TextView
        android:id="@+id/count_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/reviews"
        android:textAllCaps="true"
        android:textColor="#6D6D80"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/genre" />

    <TextView
        android:id="@+id/name_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/rating_bar"
        app:layout_constraintTop_toBottomOf="@id/movie_poster"
        android:layout_marginTop="8dp"
        android:text="@string/name_movie2"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/text_size_14"
        android:textColor="#ECECEC"/>
    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/rating_bar"
        app:layout_constraintTop_toBottomOf="@id/name_film"
        android:text="137 min"
        android:fontFamily="sans-serif-black"
        android:textSize="8sp"
        android:textAllCaps="true"
        android:textColor="#565665"/>


</androidx.constraintlayout.widget.ConstraintLayout>